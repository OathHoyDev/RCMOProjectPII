<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/row_layout">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/row_product"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/plant_ic_circle_bg"

        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/prodImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/p1_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/row_star1"
            android:layout_width="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_height="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_3d" />
        <ImageView

            android:id="@+id/row_star2"
            android:layout_width="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_height="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_3d" />
        <ImageView

            android:id="@+id/row_star3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_3d_no" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>