<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/row_unit_list_layout">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_compare_unit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center"
        android:background="@color/PIIRcmoResultRowBG">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/label_compare_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="ต้นทุน ต่อไร่"
            android:textColor="@color/RcmoNormalDarkText"
            android:textSize="@dimen/textsize_large"
            pixlui:typeface="Quark-Bold.otf" />

    </LinearLayout>

</LinearLayout>