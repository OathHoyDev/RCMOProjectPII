<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="0dp"
    android:clickable="true"
    android:id="@+id/row_layout">

<LinearLayout
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/pc_row_product"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/plant_ic_circle_bg"

            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pc_row_prodImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/p1_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pc_row_product_active"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/white_circle_bg"

            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pc_row_prodImg_active"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_check_green" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pc_row_product_selected"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gray_tran_circle_bg"

            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pc_row_prodImg_selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_check_gray" />

        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">
        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/pc_product_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="5dp"
            android:text="ข้าวโพดเลี้ยงสัตว์"
            android:textColor="@color/RcmoGrayBG"
            android:textSize="@dimen/textsize_large"
            pixlui:typeface="Quark-Bold.otf" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/pc_row_star1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_3d" />

        <ImageView

            android:id="@+id/pc_row_star2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_3d" />

        <ImageView

            android:id="@+id/pc_row_star3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_3d_no" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>