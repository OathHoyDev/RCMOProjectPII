<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/dialogGotoOtherApp"
            android:layout_width="@dimen/size_howto"
            android:layout_height="@dimen/size_howto"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:src="@drawable/btn_goto_other_app" />

        <ImageView
            android:id="@+id/dialogGotoOtherApp_myList"
            android:layout_width="@dimen/size_howto"
            android:visibility="gone"
            android:layout_height="@dimen/size_howto"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/btn_goto_other_app" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imgEconApp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/econ_full" />

    <ImageView
        android:id="@+id/imgOicApp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/oic_full" />
</LinearLayout>